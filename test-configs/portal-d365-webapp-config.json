{
  "$schema": "../schemas/config.schema.json",
  "extends": "../presets/react-typescript.json",
  "name": "portal-d365-webapp",
  "vcs": {
    "type": "git",
    "git": {
      "defaultBranch": "main",
      "branchPatterns": {
        "feature": "issue/feature-<N>/<desc>",
        "chore": "chore/<desc>"
      },
      "commitFormat": {
        "feature": "#<N> - <desc>",
        "chore": "chore - <desc>"
      },
      "hooks": {
        "preCommit": ["format", "lint", "type-check", "test"],
        "prePush": ["build"]
      },
      "mergeStrategy": "merge"
    }
  },
  "runtime": {
    "type": "node",
    "version": "20.x",
    "versionFile": ".nvmrc",
    "versionManager": "nvm"
  },
  "test": {
    "framework": "jest",
    "testCommand": "npm test -- --watchAll=false",
    "coverageCommand": "npm run coverage",
    "watchCommand": "npm test",
    "testPatterns": {
      "test": "pure-functions, business-logic, utilities, hooks, auth-logic, reducers, selectors",
      "skip": "react-components, redux-integration, styling, ui-tests"
    },
    "testNaming": "*.test.tsx",
    "testPlacement": {
      "unit": "src/**/*.test.tsx",
      "integration": "tests/integration/**/*.test.tsx"
    }
  }
}
