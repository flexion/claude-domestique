{
  "description": "Mantra session monitor - shows rules loaded (SessionStart) and context freshness (UserPromptSubmit)",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-monitor.js",
            "timeout": 3
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-monitor.js",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
