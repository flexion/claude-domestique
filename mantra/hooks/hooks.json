{
  "description": "Periodic context refresh - injects .claude/context/*.yml files on session start and periodically",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/context-refresh.js",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/context-refresh.js",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
