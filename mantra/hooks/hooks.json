{
  "description": "Mantra status - shows rules loaded (SessionStart) and freshness indicator (UserPromptSubmit)",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/status.js",
            "timeout": 3
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/status.js",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
