{
  "name": "claude-domestique",
  "version": "0.2.1",
  "description": "Your strategic coding partner - workflow management, skeptical assessment, and persistent memory. Like a cycling domestique: carries the water, stays focused on goals, handles the unglamorous work.",
  "author": {
    "name": "David Puglielli",
    "email": "dpuglielli@flexion.us"
  },
  "homepage": "https://github.com/flexion/claude-domestique",
  "repository": "https://github.com/flexion/claude-domestique",
  "license": "MIT",
  "keywords": [
    "workflow",
    "session-management",
    "git-workflow",
    "testing",
    "work-items",
    "multi-language",
    "typescript",
    "java",
    "python",
    "react"
  ],
  "commands": "./commands",
  "agents": [
    "./agents/context-refresh.md"
  ],
  "skills": [
    "./skills/context-loader",
    "./skills/drift-detector",
    "./skills/issue-detector",
    "./skills/session-update-prompter"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/prompt-submit/check-refresh.js"
          }
        ]
      }
    ]
  }
}
