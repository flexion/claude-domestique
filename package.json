{
  "name": "claude-domestique",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Code plugin marketplace - memento, mantra, onus",
  "workspaces": [
    "shared",
    "mantra",
    "memento",
    "onus"
  ],
  "scripts": {
    "install:all": "npm install",
    "test": "npm run test:shared && npm run test:mantra && npm run test:memento && npm run test:onus",
    "test:shared": "cd shared && npm test",
    "test:mantra": "cd mantra && npm test",
    "test:memento": "cd memento && npm test",
    "test:onus": "cd onus && npm test",
    "test:coverage": "npm run test:coverage:shared && npm run test:coverage:mantra && npm run test:coverage:memento && npm run test:coverage:onus",
    "test:coverage:shared": "cd shared && npm run test:coverage",
    "test:coverage:mantra": "cd mantra && npm run test:coverage",
    "test:coverage:memento": "cd memento && npm run test:coverage",
    "test:coverage:onus": "cd onus && npm run test:coverage",
    "build": "node scripts/bundle-shared.js",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flexion/claude-domestique"
  },
  "license": "MIT"
}
