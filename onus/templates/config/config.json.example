{
  "onus": {
    "platform": "github",
    "github": {
      "owner": "your-org",
      "repo": "your-repo"
    },
    "jira": {
      "host": "your-company.atlassian.net",
      "project": "PROJ"
    },
    "azure": {
      "org": "your-org",
      "project": "your-project"
    },
    "commitFormat": {
      "issue": "{number} - {verb} {description}",
      "chore": "chore - {description}"
    },
    "branchFormat": {
      "issue": "issue/{type}-{number}/{slug}",
      "chore": "chore/{slug}"
    }
  },
  "context": {
    "periodicRefresh": {
      "enabled": true,
      "interval": 20
    }
  }
}
